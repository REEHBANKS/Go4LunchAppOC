<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/app_color"
    android:layout_gravity="center"
    android:padding="16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="16dp"
                android:text="@string/today_s_lunch"
                android:textAppearance="?android:textAppearanceLarge"
                android:textSize="25dp"
                android:textColor="@color/switch_thumb_color"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/restaurant_no_name_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/have_you_decided_on_a_restaurant_yet"
                android:layout_gravity="center"
                android:textColor="@color/switch_thumb_color"
                android:textSize="18sp"
                android:textAppearance="?android:textAppearanceLarge"
                android:textStyle="bold"/>



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/restaurant_image_view"
                    android:layout_width="68dp"
                    android:layout_height="68dp"
                    android:layout_marginStart="45dp"
                    android:layout_marginEnd="15dp"
                    android:src="@drawable/picture_restaurant_with_workers"/>

                <TextView
                    android:id="@+id/restaurant_name_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nom du restaurant"
                    android:layout_gravity="center"
                    android:textColor="@color/switch_thumb_color"
                    android:textSize="18sp"
                    android:textAppearance="?android:textAppearanceLarge"
                    android:textStyle="bold"/>



            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/restaurant_ic_address"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/icon_green_lunch"
                    android:layout_marginStart="50dp"
                    android:layout_marginEnd="30dp"/>

                <TextView
                    android:id="@+id/restaurant_address_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:lineSpacingExtra="4dp"
                    android:textColor="@color/switch_thumb_color"
                    android:text="adresse "
                    android:textAppearance="?android:textAppearanceMedium" />

            </LinearLayout>

        </androidx.appcompat.widget.LinearLayoutCompat>


    </RelativeLayout>

</FrameLayout>
